				<dscsim:textbox row="7" column="1" width="19" height="1">CLR->Exit / ENT->OK</dscsim:textbox>	
			</dscsim:fields>
			<dscsim:actions>
				<dscsim:action event="PRSD" source="FK_CLR" forward="main_entry_screen"/>
			</dscsim:actions>				
		</dscsim:screen>	
		
		<dscsim:screen name="add_address" implementation="net.sourceforge.dscsim.controller.display.screens.impl.EnterNewAddressIdScreen">
			<dscsim:fields>
				<dscsim:textbox row="0" column="2" width="17" height="1">Add an address ID</dscsim:textbox>	
