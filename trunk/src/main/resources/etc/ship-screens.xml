		<dscsim:screen name="display_groups" implementation="net.sourceforge.dscsim.controller.display.screens.impl.DisplayGroupIdsScreen" >
			<dscsim:fields>
				<dscsim:textbox row="0" column="2" width="17" height="1">Delete group ID</dscsim:textbox>		
				<dscsim:menubox name="menu" row="2" column="0" width="19" height="6">
				</dscsim:menubox>	
				<dscsim:textbox row="7" column="1" width="19" height="1">CLR->Exit / ENT->OK</dscsim:textbox>	
			</dscsim:fields>	
		</dscsim:screen>
			
		<dscsim:screen name="delete_group" implementation="net.sourceforge.dscsim.controller.display.screens.impl.DeleteGroupIdScreen">
			<dscsim:fields>
				<dscsim:textbox row="0" column="2" width="17" height="1">Delete this ID</dscsim:textbox>	
				<dscsim:textbox row="2" column="1" width="13" height="1">ID:(9 digit)</dscsim:textbox>	
