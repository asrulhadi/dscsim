		<dscsim:screen name="add_group" implementation="net.sourceforge.dscsim.controller.display.screens.impl.EnterNewGroupIdScreen">
			<dscsim:fields>
				<dscsim:textbox row="0" column="2" width="17" height="1">Add a Group ID</dscsim:textbox>	
