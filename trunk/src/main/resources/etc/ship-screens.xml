				<dscsim:editbox row="5" column="4" width="15" height="1" name="addressid"/>	
				<dscsim:textbox row="7" column="1" width="19" height="1">CLR->Exit / ENT->OK</dscsim:textbox>	
			</dscsim:fields>
			<dscsim:actions>
				<dscsim:action event="PRSD" source="FK_ENT" forward="setup_address_info"/>
