<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="dscsim $APP_VER"
                location="startMenu"/>
  <shortcut
    name="dscsim"
    target="$INSTALL_PATH\dscsim.jar"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
    description="starts dscsim"
    iconFile="$INSTALL_PATH\dscsim.ico"
    iconIndex="0"
    initialState="noShow"
    programGroup="yes"
    desktop="yes"
    startMenu="no"
    startup="no">
    <createForPack name="Windows Scripts"/>
  </shortcut>

  <shortcut
    name="dscsim (debug)"
    target="$INSTALL_PATH\runapp_debug.bat"
    commandLine=""
    workingDirectory="$INSTALL_PATH"
